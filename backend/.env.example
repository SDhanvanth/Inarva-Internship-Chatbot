# AI Platform Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=Multi Chat AI
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=chatbot
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET_KEY=generate_a_secure_random_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
MCP_SIGNING_SECRET=generate_another_secure_random_key_here

# Rate Limiting
RATE_LIMIT_IP_PER_MINUTE=60
RATE_LIMIT_IP_PER_HOUR=1000
RATE_LIMIT_USER_PER_MINUTE=100
RATE_LIMIT_USER_PER_HOUR=2000
RATE_LIMIT_TOOL_PER_MINUTE=30
RATE_LIMIT_BURST_SIZE=10

# MCP
MCP_DEFAULT_TIMEOUT=30
MCP_MAX_RETRIES=3
MCP_RETRY_DELAY=1.0

# Gemini AI (Inbuilt Chatbot)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash
INBUILT_MCP_ENABLED=true

# Input Limits
MAX_INPUT_LENGTH=50000
MAX_CONVERSATION_MESSAGES=100

# Encryption
ENCRYPTION_KEY=generate_32_char_encryption_key_here
